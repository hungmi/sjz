<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell><Data ss:Type="String"><%= Department.human_attribute_name(:name) %></Data></Cell>
        <Cell><Data ss:Type="String"><%= Department.human_attribute_name(:ordering) %></Data></Cell>
        <Cell><Data ss:Type="String">人数</Data></Cell>
      </Row>
    <% @departments.each do |department| %>
      <Row>
        <Cell><Data ss:Type="String"><%= department.name %></Data></Cell>
        <Cell><Data ss:Type="String"><%= department.ordering %></Data></Cell>
        <Cell><Data ss:Type="Number"><%= department.employees.size %></Data></Cell>
      </Row>
    <% end %>
    </Table>
  </Worksheet>
</Workbook>