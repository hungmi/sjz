<div class="modal fade" id="docShareUrl">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">分享鏈結</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="share_timeout">有效時間（秒）</label><br>
          <%= text_field_tag :share_timeout, 600, style: "width: 100px;", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="share_url">按右鍵複製</label><br>
          <%= text_area_tag :share_url, nil, style: "width: 100%;", class: "form-control" %>
        </div>
        <div class="form-group">
          <canvas id="qr" class="hidden"></canvas>
          <img id="qr-img"></canvas>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">關閉</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->