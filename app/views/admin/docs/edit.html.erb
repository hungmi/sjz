<h1 class="page-header">
  <%= t ".header" %>
</h1>

<div class="row">
	<div class="col-xs-2 col-sm-1">
		<%= link_to admin_folder_docs_path(folder_id: @folder.try(:id)), class: "abs-left mb-3", style: "font-size: 24px;" do %>
	 		<i class="fa fa-arrow-left"></i>
		<% end %>
	</div>
	<div class="col-xs-10 col-sm-11">
		<%= breadcrumb @folder %>
	</div>
</div>

<div class="mx-auto">
  <%= render "form", doc: @doc %>
</div>

<% if @doc.office? %>
	<div class="mt-5">
		<iframe width="100%" height="800" frameborder="0" scrolling="no" src="<%= @doc.office_embed_url %>&wdDownloadButton=True"></iframe>
	</div>
<% end %>