<div class="row">
  <div class="col-xs-12 col-sm-6">
    <h1 class="page-header">
      <%= t ".header" %>
      <br class="hidden-md hidden-lg">
      <%= link_to admin_departments_path, class: "btn btn-link pb-0" do %>
        <i class="fa fa-users"></i>
        <%= t "admin.departments.index.header" %>
      <% end %>
    </h1>
  </div>
  <div class="col-sm-6 mt-5 text-right mt-6">
    <%= link_to new_admin_employee_path, class: "btn btn-primary" do %>
      <i class="fa fa-plus"></i>
      <%= t "admin.employees.new.header" %>
    <% end %>
    <%= link_to admin_employees_path(format: :xls), class: "btn btn-success mr-1" do %>
      <i class="fa fa-arrow-circle-down"></i>
      <%= t "admin.export_csv" %>
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-hover">
    <thead class="thead-default">
      <th style="min-width: 100px;">姓名</th>
      <th style="min-width: 110px;">職務</th>
      <th style="min-width: 120px;">部門</th>
      <th>手機</th>
      <th>座機</th>
      <th>分機</th>
      <th></th>
    </thead>
    <tbody>
      <%= render @employees %>
    </tbody>
  </table>
</div>

<%= render "admin/common/modal", model_name: "Employee", remote_get: true, remote_save: true %>