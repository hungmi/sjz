        </div>
      </div>
    <% end %>
    <%= link_to admin_items_path, class: "col-xs-12 col-sm-6 col-md-4 dock" do %>
      <div class="panel panel-default">
        <div class="panel-body">
          <i class="fa fa-cubes"></i>
          <%= t "administration.menu.asset_management" %>
        </div>
      </div>
    <% end %>
    <%= link_to admin_employees_path, class: "col-xs-12 col-sm-6 col-md-4 dock" do %>
      <div class="panel panel-default">
        <div class="panel-body">
