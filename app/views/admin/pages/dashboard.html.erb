<h1 class="page-header"><%= t ".header" %></h1>
<div class="col-md-6 col-sm-12">
  <h3><%= t "daily.name" %></h3>
  <div class="row mt-5 docks">
    <%= link_to admin_docs_path, class: "col-xs-12 col-sm-6 col-md-4 dock" do %>
      <div class="panel panel-default">
        <div class="panel-body">
          <i class="fa fa-paperclip"></i>
          <%= t "daily.menu.index" %>
        </div>
      </div>
    <% end %>
  </div>

  <h3><%= t "finance.name" %></h3>
  <div class="row mt-5 docks">
    <%= link_to admin_finance_tickets_uploading_path, class: "col-xs-12 col-sm-6 col-md-4 dock" do %>
