        <div class="panel-body">
          <i class="fa fa-address-card-o"></i>
          <%= t "marketing.menu.customer_management" %>
        </div>
      </div>
    <% end %>
  </div>

  <h3><%= t "administration.name" %></h3>
  <div class="row mt-5 docks">
    <%= link_to admin_iso_docs_path, class: "col-xs-12 col-sm-6 col-md-4 dock" do %>
      <div class="panel panel-default">
        <div class="panel-body">
          <i class="fa fa-paperclip"></i>
