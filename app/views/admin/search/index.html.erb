<h1>搜寻结果</h1>

<h4>文档类</h4>
<% if @folders.present? || @docs.present? %>
	<div class="docks table-responsive">
	  <table class="table table-hover <%= 'hidden' unless (@folders.present? || @docs.present?) %>">
	    <thead>
	      <tr>
	        <th>名称</th>
	        <th>修改纪录</th>
	        <th></th>
	      </tr>
	    </thead>
	    <tbody class="folders">
	      <%= render partial: "admin/folders/folder", collection: @folders.order(id: :asc), as: :folder %>
	    </tbody>
	    <tbody class="docs" style="border-top: 1px solid #ddd;">
	      <%= render partial: "admin/docs/doc", collection: @docs %>
	    </tbody>
	  </table>
	</div>
<% else %>
	<p class="well">无结果</p>
<% end %>

<hr>

<h4>人员类</h4>
<% if @employees.present? %>
	<div class="table-responsive">
	  <table class="table table-hover">
	    <thead class="thead-default">
	      <th style="min-width: 100px;">姓名</th>
	      <th style="min-width: 110px;">职务</th>
	      <th style="min-width: 120px;">部门</th>
	      <th>手机</th>
	      <th>座机</th>
	      <th>分机</th>
	      <th></th>
	    </thead>
	    <tbody>
	      <%= render partial: "admin/employees/employee", collection: @employees %>
	    </tbody>
	  </table>
	</div>
<% else %>
	<p class="well">无结果</p>
<% end %>

<hr>

<h4>财产类</h4>
<% if @items.present? %>
	<%= render partial: "admin/items/item", collection: @items %>
<% else %>
	<p class="well">无结果</p>	
<% end %>
